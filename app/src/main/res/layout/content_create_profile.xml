<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.findyourfellow.CreateProfileActivity"
    tools:showIn="@layout/activity_create_profile">

    <EditText
        android:id="@+id/createFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/createLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/createFirstName"
        android:layout_alignStart="@+id/createFirstName" />

    <EditText
        android:id="@+id/createAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Age"
        android:inputType="number"
        android:layout_below="@+id/createLastName"
        android:layout_alignStart="@+id/createLastName" />

    <EditText
        android:id="@+id/createEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/createAge"
        android:layout_alignStart="@+id/createAge" />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/createEmail"
        android:layout_alignStart="@+id/createEmail" />

    <EditText
        android:id="@+id/createNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="9"
        android:layout_below="@+id/createPassword"
        android:layout_alignStart="@+id/createPassword" />

    <Button
        android:id="@+id/newProfileButton"
        android:layout_width="150dip"
        android:layout_height="30dip"
        android:background="@drawable/button_selector"
        android:fontFamily="sans-serif-condensed"
        android:text="Create Profile"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dip"
        android:layout_height="50dip"
        app:srcCompat="@drawable/userwhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/createEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createNumber"
        android:layout_below="@+id/createNumber"
        android:layout_marginTop="12dp"
        android:maxLength="9"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Emergency Number"
        android:inputType="phone" />

</RelativeLayout>
