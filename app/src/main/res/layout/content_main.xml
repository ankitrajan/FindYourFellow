<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.findyourfellow.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/newCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:background="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Create Account"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/resetButton"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/loginButton"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_below="@+id/passwordField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_selector"
        android:elevation="3dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Sign in"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginButton"
        android:layout_alignTop="@+id/loginButton"
        android:elevation="24dp"
        android:visibility="visible"
        app:srcCompat="@drawable/framemain"
        android:layout_alignEnd="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton" />

    <Button
        android:id="@+id/resetButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dip"
        android:layout_height="30dip"
        android:background="@android:color/black"
        android:elevation="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Change/Reset Password"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView16"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="130dip"
        android:layout_height="40dip"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textEmailAddress"
        android:scaleType="center"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:layout_alignTop="@+id/imageView16"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="130dip"
        android:layout_height="40dip"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_alignEnd="@+id/emailField"
        android:layout_alignStart="@+id/emailField"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="40dip"
        android:layout_height="40dip"
        app:srcCompat="@drawable/userwhite"
        android:layout_alignTop="@+id/imageView16"
        android:layout_alignStart="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/imageView15"
        app:srcCompat="@drawable/pass" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="150dip"
        android:layout_height="150dip"
        app:srcCompat="@drawable/main"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/imageView16" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="150dip"
        android:layout_height="150dip"
        app:srcCompat="@drawable/main"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
