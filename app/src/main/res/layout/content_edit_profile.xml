<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.findyourfellow.EditProfileActivity"
    tools:showIn="@layout/activity_edit_profile">

    <Button
        android:id="@+id/profileSave"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/button_selector"
        android:text="SAVE"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editLastName"
        android:ems="10"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVQXYZ"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editFirstName"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVQXYZ"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="14sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="number"
        android:maxLength="3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:visibility="visible"
        android:layout_below="@+id/editLastName"
        android:layout_alignStart="@+id/editLastName" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="phone"
        android:maxLength="10"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:visibility="visible"
        android:layout_below="@+id/editAge"
        android:layout_alignStart="@+id/editAge" />

    <EditText
        android:id="@+id/editEmergency1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPhone"
        android:layout_alignStart="@+id/editPhone"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:maxLength="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="phone"
        android:hint="#A9A9A9"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editEmergency2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="phone"
        android:maxLength="10"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/white"
        android:hint="#A9A9A9"
        android:visibility="visible"
        android:layout_below="@+id/editEmergency1"
        android:layout_alignStart="@+id/editEmergency1"
        android:layout_alignEnd="@+id/editEmergency1" />

    <EditText
        android:id="@+id/editEmergency3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/white"
        android:visibility="visible"
        android:maxLength="10"
        android:hint="#A9A9A9"
        android:layout_below="@+id/editEmergency2"
        android:layout_alignStart="@+id/editEmergency2"
        android:layout_alignEnd="@+id/editEmergency2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Phone Number "
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/editPhone"
        android:layout_alignBottom="@+id/editPhone"
        android:layout_toStartOf="@+id/editPhone"
        android:layout_marginEnd="9dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/editPhone"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Emergency Contacts :"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Age "
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/editAge"
        android:layout_alignBottom="@+id/editAge"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editLastName"
        android:layout_alignBottom="@+id/editLastName"
        android:layout_alignStart="@+id/textView6"
        android:fontFamily="sans-serif-condensed"
        android:text="Last Name "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="First Name "
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/editFirstName"
        android:layout_alignBottom="@+id/editFirstName"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="30dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/emergencyicon"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/imageView21"
        android:layout_alignBottom="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="9dp"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/imageView21"
        android:layout_alignTop="@+id/textView6"
        app:srcCompat="@drawable/age"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/imageView21" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/first"
        android:layout_alignStart="@+id/imageView22"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/imageView22" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/last"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/imageView22"
        android:layout_alignEnd="@+id/imageView22" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editEmergency3"
        android:layout_alignStart="@+id/imageView27"
        android:layout_alignTop="@+id/editEmergency3"
        app:srcCompat="@drawable/ic_3" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editEmergency1"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/editEmergency1"
        app:srcCompat="@drawable/ic_1" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editEmergency2"
        android:layout_alignStart="@+id/imageView27"
        android:layout_alignTop="@+id/editEmergency2"
        app:srcCompat="@drawable/ic_2" />


</RelativeLayout>