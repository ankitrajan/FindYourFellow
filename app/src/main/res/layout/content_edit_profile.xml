<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.findyourfellow.EditProfileActivity"
    tools:showIn="@layout/activity_edit_profile">

    <Button
        android:id="@+id/profileSave"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/button_selector"
        android:text="SAVE"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editEmergency1"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editEmergency2"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="306dp"
        android:textColorHint="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editEmergency3"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:textColorHint="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:ems="10"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />


</RelativeLayout>