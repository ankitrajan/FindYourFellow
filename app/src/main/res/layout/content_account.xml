<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.findyourfellow.AccountActivity"
    tools:showIn="@layout/activity_account">

    <Button
        android:id="@+id/manageButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginTop="119dp"
        android:background="@color/colorPrimaryDark"
        android:text="Manage Friends"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/trackButton" />

    <Button
        android:text="Track Friends"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginTop="120dp"
        android:id="@+id/trackButton"
        android:layout_below="@+id/manageButton"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />/>

    <Switch
        android:id="@+id/trackingSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Switch"
        android:textColor="@android:color/black" />
</RelativeLayout>
